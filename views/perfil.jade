extends ./layouts/_index.jade
block header
    include ./layouts/_menus/_perfil.jade
        .center.margin-top-2
            div(style="background-image: url(#{user.image.thum})").user-image.mdl-shadow--2dp
            p.mdl-typography--display-1.mdl-color-text--grey-800.margin-0= user.name
            p.mdl-typography--display-1.mdl-color-text--grey-800.margin-0= user.username
            p.mdl-typography--display-1.mdl-color-text--grey-800.margin-0= user.email
        .mdl-grid
            .mdl-cell.mdl-cell--10-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone.mdl-cell--1-offset-desktop.mdl-card.mdl-shadow--2pd
                p.mdl-typography--headline.mdl-color--grey-100.center.padding-1.margin-0 Editar perfil
                form(action="/perfil?_method=PUT" method="POST" enctype="multipart/form-data").mdl-grid.margin-1
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
                        input(value="#{user.name}" name="name" id="name" type="text").mdl-textfield__input
                        label(for="name").mdl-textfield__label Nombre
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
                        input(value="#{user.username}" name="username" type="text" id"username").mdl-textfield__input
                        label(for="username").mdl-textfield__label Username
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
                        input(value="#{user.email}" name="email" id="email" type="email").mdl-textfield__input
                        label(for="email").mdl-textfield__label Correo eléctronico
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
                        input(name="password" id="password" type="password").mdl-textfield__input
                        label(foe="password").mdl-textfield__label Contraseña
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--file.mdl-cell.mdl-cell--12-col.margin-center
                        input(placeholder="Imagen" type="text" readonly)#uploadfile.mdl-textfield__input
                        .mdl-button.mdl-button--primary.mdl-button--icon.mdl-button--file
                            i.material-icons attach_file
                            input(type="file" name="image" accept="image/*")#uploadBtn
                    .mdl-cell.mdl-cell--4-col.mdl-cell--8-offset.right
                        button(type="submit").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Actualizar
