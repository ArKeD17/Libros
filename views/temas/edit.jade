extends ../layouts/_index.jade
block header
    include ../layouts/_menus/_perfil.jade
        .mdl-grid.margin-top-10
            .mdl-cell.mdl-cell--4-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone.mdl-cell--4-offset-desktop.mdl-card.mdl-shadow--2pd
                p.mdl-typography--headline.mdl-color--grey-100.center.padding-2.margin-0 Editar tema #{tema.name}
                form(action="/temas/edit/#{tema._id}?_method=PUT" method="POST").mdl-grid.margin-1
                    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.margin-center
                        input(value="#{tema.name}" name="name" type="text" id="name").mdl-textfield__input
                        label(for="name").mdl-textfield__label Nombre
                    .mdl-cell.mdl-cell--8-col.mdl-cell--middle.left #[a(href="/temas/temas") Regresar]
                    .mdl-cell.mdl-cell--4-col.right
                        button(type="submit").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Actualizar
