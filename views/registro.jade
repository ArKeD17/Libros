extends ./layouts/_index.jade
block body
    .mdl-grid.margin-top-10
        .mdl-cell.mdl-cell--4-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone.mdl-cell--4-offset-desktop.mdl-card.mdl-shadow--2pd
            p.mdl-typography--headline.mdl-color--grey-100.center.padding-2.margin-0 Registro
            form(action="/registro" method="POST").mdl-grid.margin-1
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.margin-center
                    input(name="name" id="name" type="text").mdl-textfield__input
                    label(for="name").mdl-textfield__label Nombre 
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.margin-center
                    input(name="username" id="username" type="text").mdl-textfield__input
                    label(for="username").mdl-textfield__label Username
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.margin-center
                    input(name="email" id="email" type="email").mdl-textfield__input
                    label(for="email").mdl-textfield__label Correo eléctronico
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--12-col.margin-center
                    input(name="password" id="password" type="password").mdl-textfield__input
                    label(for="password").mdl-textfield__label Contraseña
                .mdl-cell.mdl-cell--8-col.mdl-cell--middle.center Ya tengo cuenta. #[a(href="/") Entrar.]
                .mdl-cell.mdl-cell--4-col.right
                    button(type="submit").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Registrarme
