extends ../layouts/_index.jade
block header
    include ../layouts/_menus/_perfil.jade
        .mdl-grid.margin-top-5
            .mdl-cell.mdl-cell--12-col.mdl-cell--12-col-talbet.mld-cell--12-col-phone.mdl-cell--12-offset-desktop.mdl-shadow--2dp
                .mdl-cell.mdl-cell--12-col.right
                    a(href="/libros/libro_nuevo").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Nuevo Libro
                .mdl-grid.mdl-cell--12-col.margin-0
                    if(libro[0] != undefined)
                        for libros in libro 
                            .mdl-cell.mdl-cell--4-col.mdl-cell--4-col-tablet.mdl-cell--4-col-phone.mdl-cell--0-offset-desktop.mdl-card.mdl-shadow--2dp
                                p.mdl-typography--display-1.mdl-color--grey-100.center.padding-2.margin-0= libros.name
                                h1.mdl-typography--title.left.padding-2.margin-0.font-weight-2 Autor: #{libros.autor}
                                if(libros.tema != undefined && libros.materia != undefined)
                                    h1.mdl-typography--title.left.padding-2.margin-0.font-weight-2 Tema: #{libros.tema}
                                    h1.mdl-typography--title.left.padding-2.margin-0.font-weight-2 Materia: #{libros.materia}
                                h1.mdl-typography--title.left.padding-2.margin-0.font-weight-2 Costo: $#{libros.costo}
                                h1.mdl-typography--title.left.padding-2.margin-o.font.weight-2 Creador: #{libros.creator.email}
                                .mdl-grid.mdl-cell.mdl-cell--12-col.margin-0
                                    .mdl-cell.mdl-cell--6-col
                                        a(href="/libros/edit/#{libros._id}").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Editar
                                    .mdl-cell.mdl-cell--6-col.right
                                        form(action="/libros/libros/#{libros._id}?_method=DELETE" method="POST")
                                            button(type="submit").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Eliminar
                    else
                        p.mdl-typography--headline.center.padding-2.margin-0 No hay libros

